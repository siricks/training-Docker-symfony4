{% extends 'base.html.twig' %}

{% block title %}{% trans %}Game{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Game{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Game Date{% endtrans %}</th>
                <td>{{ game.gameDate ? game.gameDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('game_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
