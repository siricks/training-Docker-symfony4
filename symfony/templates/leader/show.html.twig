{% extends 'base.html.twig' %}

{% block title %}{% trans %}Leader{% endtrans %}{% endblock %}

{% block body %}
    <h1>{% trans %}Leader{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ leader.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Name{% endtrans %}</th>
                <td>{{ leader.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Image{% endtrans %}</th>
                <td>{{ leader.image }}</td>
            </tr>
            <tr>
                <th>{% trans %}Country{% endtrans %}</th>
                <td>{{ leader.country }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('leader_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a href="{{ path('leader_edit', {'id': leader.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('leader/_delete_form.html.twig') }}
{% endblock %}
