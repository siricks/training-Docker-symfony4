{% extends 'base.html.twig' %}

{% block title %}{% trans %}Random leader{% endtrans %}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{% trans %}Random leader{% endtrans %}</h1>

        <div class="row my-4">
            <div class="col-6">
                <div class="card-group">
                    <div class="card">
                        <img src="{{ asset('images/leaders/' ~ random_leader.image) }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ random_leader.name }}</h5>
                            <p class="card-text">{{ random_leader.country }}</p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('game_new_wf', {'leader_id': random_leader.id}) }}">{% trans %}Create game{% endtrans %}</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-12">
                <div class="card-columns">
                    {% for leader in leaders %}
                        <div class="card">
                            <img src="{{ asset('images/leaders/' ~ leader.image) }}" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">{{ leader.name }}</h5>
                                <p class="card-text">{{ leader.country }}</p>
                            </div>
                            <div class="card-footer">
                                <a href="{{ path('game_new_wf', {'leader_id': leader.id}) }}">{% trans %}Create game{% endtrans %}</a>
                            </div>
                        </div>
                    {% else %}
                        Лидеров нет
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>
    </div>
{% endblock %}
